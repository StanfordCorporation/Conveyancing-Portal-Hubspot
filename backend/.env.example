# HubSpot Configuration
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token_here
HUBSPOT_API_BASE=https://api.hubapi.com
HUBSPOT_PORTAL_ID=your_portal_id

# DocuSign Configuration
DOCUSIGN_INTEGRATION_KEY=your_docusign_integration_key
DOCUSIGN_USER_ID=your_docusign_user_id
DOCUSIGN_ACCOUNT_ID=your_docusign_account_id
DOCUSIGN_BASE_PATH=https://demo.docusign.net/restapi
DOCUSIGN_OAUTH_BASE_PATH=https://account-d.docusign.com

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRY=7d

# API Configuration
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# WordPress Integration
WORDPRESS_URL=https://yoursite.com
WORDPRESS_API_KEY=your_wordpress_api_key

# Email Configuration (for OTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Aircall Configuration (for SMS OTP)
AIRCALL_API_ID=your_aircall_api_id
AIRCALL_TOKEN=your_aircall_token
AIRCALL_FROM_NUMBER=+61483980010
AIRCALL_LINE_ID=846163

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/jpg,image/png
